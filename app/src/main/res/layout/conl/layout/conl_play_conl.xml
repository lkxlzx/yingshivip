<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cTtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南方有乔木"
                    android:textSize="16sp"
                    android:textColor="#111"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cTtMsg"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorOn"
                    android:text="2017"/>


                <android.support.v7.widget.ButtonBarLayout
                    android:id="@+id/cBtInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:text="简介"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_bv_right" />
                </android.support.v7.widget.ButtonBarLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cTtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:text="7.2"/>
                <TextView
                    android:singleLine="true"
                    android:id="@+id/cTtSort"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:text="大陆 · 电视剧"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/cBtLine"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="切换线路"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/cBtSc"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="5dp"
                        android:src="@drawable/conl_ic_play_conl_sc"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="5dp"
                        android:tint="#555"
                        android:id="@+id/cBtXz"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/conl_ic_play_conl_xz"/>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="5dp"
                        android:id="@+id/cBtCode"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@mipmap/ic_logo_youku"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/xian"/>

        <TextView
            android:id="@+id/cTtInfo"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#666"
            android:text=""/>

        <View style="@style/xian"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bfsm"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/bfsm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="播放说明"
                android:textColor="#333"
                android:textSize="14sp"
                android:padding="10dp"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bv_bottom"/>

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tt_bfsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textColor="#666"
            android:text="@string/bfsm"/>


        <View style="@style/xian"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drameview"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/bt_play_code"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tt_codename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="播放源:"
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_select_src"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_bv_bottom"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <android.support.v7.widget.ButtonBarLayout
                    android:id="@+id/cBtDrama"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ttDramaInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="16"
                        android:text="更新至 29 集"
                        android:textColor="#999"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_bv_right" />
                </android.support.v7.widget.ButtonBarLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/cTabPlayList"
            style="@style/listv_tab_view"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            app:tabGravity="center" />

        <LinearLayout
            android:id="@+id/dbl_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
