<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#20000000"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/foot_bt_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:tint="#FFFFFF"
            android:padding="10dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:onClick="onClick"
            android:background="@drawable/back_click"
            android:src="@drawable/icon_video_play"/>
        <ImageView
            android:id="@+id/bt_next"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:tint="#ffffff"
            android:padding="12dp"
            android:clickable="true"
            android:background="@drawable/back_click"
            android:src="@drawable/icon_video_next"/>
        <TextView
            android:id="@+id/tt_time_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:padding="2dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#ffffff" />
        <SeekBar
            android:maxHeight="2dp"
            android:thumbOffset="0dp"
            android:padding="0dp"
            android:max="1000"
            android:layout_marginTop="18dp"
            android:thumb="@drawable/shape_point_circular"
            android:id="@+id/seekBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/bg_seek_bar_drawable"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:layout_height="12dp"/>
        <TextView
            android:id="@+id/tt_time_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:padding="2dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/mBtLine"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:padding="0dp"
            android:textSize="14sp"
            android:onClick="onClick"
            android:text="切换线路"
            android:background="@drawable/player_buttom1"/>
        <Button
            android:id="@+id/tt_drame"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:padding="0dp"
            android:textSize="13sp"
            android:onClick="onClick"
            android:text="选集"
            android:background="@drawable/player_buttom1"/>
        <Button
            android:id="@+id/tt_line"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:padding="0dp"
            android:textSize="13sp"
            android:onClick="onClick"
            android:text="线路"
            android:background="@drawable/player_buttom1"/>
        <ImageView
            android:id="@+id/bt_full"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:tint="#ffffff"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:background="@drawable/back_click"
            android:src="@drawable/icon_video_full"/>
    </LinearLayout>

</RelativeLayout>
