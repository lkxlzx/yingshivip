
<resources>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    <!-- 弹出框动画 由下至上 -->
    <style name="dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/notice_edit_select_bottom_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/notice_edit_select_bottom_exit</item>
        <!-- 退出时的动画 -->
    </style>



    <style name="xian">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2px</item>
        <item name="android:background">#ddd</item>
    </style>
    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="clickstyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--从右到左弹出-->
    <style name="AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>

    <!--从上到下弹出-->
    <style name="AnimTOP" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
</resources>
